<h1>投稿一覧</h1>
<%= link_to '新しく投稿する', new_feed_path %>

<div>
  <% @feeds.each do |feed| %>
  <table>
    <td><%= feed.user.name %></td>
    <td><%= feed.content %></td>
    <td><%= image_tag(feed.image.url) if feed.image && feed.image.url %></td>
    <td><%= link_to '詳細', feed_path(feed.id) %></td>
    <td><%= link_to '編集', edit_feed_path(feed.id), data: { confirm: '本当に編集していいですか？' } %></td>
    <td><%= link_to '削除', feed_path(feed.id), method: :delete, data: { confirm: '本当に削除していいですか？' } %></td>
  </table>
  <% end %>
</div>
